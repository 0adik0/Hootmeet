<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#90CFCFCF"
                android:endColor="#90CFCFCF"
                android:angle="360" />
            <size
                android:width="300dp"
                android:height="300dp"/>

            <padding
                android:left="30dp"
                android:top="30dp"
                android:right="30dp"
                android:bottom="30dp" />
            <stroke
                android:color="#B107C1"
                android:width="2dp"/>
        </shape>
    </item>
</selector>